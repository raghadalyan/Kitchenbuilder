@page "/floor"
@inject NavigationManager NavManager

<h3>Enter Floor Dimensions</h3>

<div class="form-container">
    <div class="input-group">
        <label>Width (cm):</label>
        <input type="number" @bind="Width" min="1" />
    </div>

    <div class="input-group">
        <label>Length (cm):</label>
        <input type="number" @bind="Length" min="1" />
    </div>

    <button @onclick="Submit">Save</button>

    @if (Submitted)
    {
        <p style="color: green;">✅ Saved Dimensions: @Width cm width × @Length cm length</p>
        <button @onclick="GoToWallSetup">Go to Wall Setup</button>
    }
</div>

@code {
    private int Width { get; set; }
    private int Length { get; set; }
    private bool Submitted { get; set; }

    private void Submit()
    {
        Submitted = true;
    }

    private void GoToWallSetup()
    {
        NavManager.NavigateTo($"/walls-setup?width={Width}&length={Length}");
    }
}
